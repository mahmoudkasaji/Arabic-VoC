# Staging Environment Configuration
FLASK_ENV=staging
FLASK_DEBUG=False

# Database (staging database)
STAGING_DATABASE_URL=postgresql://staging_user:staging_pass@staging-host:5432/arabic_voc_staging

# Security (staging keys - replace with actual values)
STAGING_SECRET_KEY=your-staging-secret-key-here
SESSION_SECRET=your-staging-session-secret

# OpenAI (staging API key)
STAGING_OPENAI_API_KEY=sk-your-staging-openai-key-here

# Logging
LOG_LEVEL=INFO

# Application
APP_NAME=Arabic VoC Platform (Staging)
ENVIRONMENT=staging

# Rate limiting (moderate)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=200

# CORS (staging domains)
CORS_ORIGINS=https://staging-arabic-voc.replit.app,https://staging.your-domain.com