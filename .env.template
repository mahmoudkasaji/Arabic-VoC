# Voice of Customer Platform - Environment Variables Template
# Copy this file to .env and fill in your actual values

# === REQUIRED FOR BASIC FUNCTIONALITY ===

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/voc_platform

# Session Security
SESSION_SECRET=your-secret-key-here

# OpenAI API (Required for Arabic sentiment analysis)
OPENAI_API_KEY=sk-your-openai-api-key

# Replit Authentication (Required)
REPLIT_CLIENT_ID=your-replit-client-id
REPLIT_CLIENT_SECRET=your-replit-client-secret

# === OPTIONAL INTEGRATIONS ===

# Anthropic/Claude API (Optional - for enhanced analysis)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Email Configuration (Gmail preferred)
GMAIL_USERNAME=your-gmail@gmail.com
GMAIL_APP_PASSWORD=your-16-char-app-password

# Email Configuration (SendGrid fallback)
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=AC-your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token  
TWILIO_PHONE_NUMBER=+1234567890

# === WHATSAPP BUSINESS API CONFIGURATION ===
# Facebook/Meta WhatsApp Business Cloud API
WHATSAPP_API_TOKEN=EAAxxxxx-your-facebook-graph-api-token
WHATSAPP_PHONE_NUMBER_ID=123456789012345
WHATSAPP_BUSINESS_ACCOUNT_ID=123456789012345
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# WhatsApp via Twilio (Alternative)
WHATSAPP_PHONE_NUMBER=whatsapp:+14155238886

# === ADVANCED INTEGRATIONS (ROADMAP) ===

# Salesforce CRM
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret
SALESFORCE_INSTANCE_URL=https://your-org.salesforce.com

# HubSpot CRM
HUBSPOT_API_KEY=your-hubspot-api-key

# Zendesk Support
ZENDESK_SUBDOMAIN=your-subdomain
ZENDESK_API_TOKEN=your-zendesk-token
ZENDESK_EMAIL=your-email@company.com

# Azure OpenAI (Enterprise)
AZURE_OPENAI_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_VERSION=2024-02-15-preview

# Data Warehouse Integration
SNOWFLAKE_ACCOUNT=your-account.snowflakecomputing.com
SNOWFLAKE_USER=your-username
SNOWFLAKE_PASSWORD=your-password
SNOWFLAKE_WAREHOUSE=your-warehouse

# Google BigQuery
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
BIGQUERY_PROJECT_ID=your-gcp-project-id
BIGQUERY_DATASET=your-dataset-name

# === DEPLOYMENT CONFIGURATION ===

# Environment
FLASK_ENV=development
DEBUG=true

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# From Email for system notifications
FROM_EMAIL=noreply@your-domain.com

# Application URL (for webhook callbacks)
APP_URL=https://your-app-domain.replit.app