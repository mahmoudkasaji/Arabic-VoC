# Database Configuration (Replit PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Security Configuration
SECRET_KEY=your_secret_key_here_minimum_32_characters

# Redis Configuration (for caching and real-time analytics)
REDIS_URL=redis://localhost:6379/0

# Arabic Processing Configuration
ARABIC_LOCALE=ar_SA.UTF-8
DEFAULT_LANGUAGE=ar
RTL_SUPPORT=true

# Application Configuration
DEBUG=true
LOG_LEVEL=debug
CORS_ORIGINS=http://localhost:5000,https://*.replit.dev

# Analytics Configuration
ENABLE_REAL_TIME_ANALYTICS=true
FEEDBACK_BATCH_SIZE=100
